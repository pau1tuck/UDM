{
    "name": "udm-server-apollo",
    "version": "3.1.0",
    "description": "UDM Server (Apollo Express)",
    "main": "server.js",
    "scripts": {
        "build": "tsc && mkdir -p dist/graphql && cp src/graphql/schema.graphql dist/graphql",
        "dev": "concurrently \"./node_modules/.bin/tsc -w\" \"mkdir -p ./dist/graphql && cp ./src/graphql/schema.graphql ./dist/graphql\" \"mkdir -p ./dist/views && cp -R ./src/views ./dist/\" \"./node_modules/.bin/nodemon ./dist/server.js\"",
        "dev:win": "concurrently \"tsc -w && mkdir dist\\graphql && copy src\\graphql\\schema.graphql dist\\graphql\" \"nodemon dist\\server.js\"",
        "run": "nodemon dist/server.js",
        "test": "echo \"Error: no test specified\" && exit 1",
        "start-dev": "nodemon dist/server.js"
    },
    "keywords": [],
    "author": "Paul D.R. Tuck @pau1tuck",
    "license": "MIT",
    "dependencies": {
        "@apollo/server": "^4.7.1",
        "@graphql-tools/load-files": "^6.6.1",
        "@graphql-tools/merge": "^8.4.2",
        "@graphql-tools/utils": "^9.2.1",
        "@types/uuid": "^9.0.1",
        "argon2": "^0.30.3",
        "body-parser": "^1.20.2",
        "connect-redis": "^7.1.0",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "ejs": "^3.1.9",
        "express": "^4.18.2",
        "express-session": "^1.17.3",
        "graphql": "^16.6.0",
        "graphql-tag": "^2.12.6",
        "graphql-tools": "^8.3.20",
        "ioredis": "^5.3.2",
        "moment": "^2.29.4",
        "passport": "^0.6.0",
        "passport-local": "^1.0.0",
        "pg": "^8.10.0",
        "pm2": "^5.3.0",
        "reflect-metadata": "^0.1.13",
        "throng": "^5.0.0",
        "typeorm": "^0.3.16",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/express-session": "^1.17.7",
        "@types/node": "^20.1.3",
        "@types/passport": "^1.0.12",
        "@types/passport-local": "^1.0.35",
        "@types/throng": "^5.0.4",
        "concurrently": "^8.0.1",
        "eslint": "^8.40.0",
        "eslint-config-airbnb-typescript-prettier": "^5.0.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "glob": "^10.2.3",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.8",
        "ts-node": "^10.9.1",
        "tslib": "^2.5.0",
        "typescript": "^5.0.4"
    }
}
